<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sadik.teacher"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/sadik_logo"
        android:label="@string/app_name"
        android:name="com.sadik.teacher.SadikApplication"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sadik.activities.LandingActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sadik.activities.HomeActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.sadik.activities.SettingActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:label="@string/app_name" />
        
        <activity
            android:name="com.sadik.activities.SettingAttendanceActivity"
            android:label="@string/app_name" />
        </application>

</manifest>
