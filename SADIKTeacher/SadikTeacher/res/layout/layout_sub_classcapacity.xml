<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="K5 Section1"
	style="@style/styleText_singleline_black_14"
	android:id="@+id/txt_ClassMgtSub_ClassName"
	android:layout_marginTop="@dimen/dp_8"
	android:textStyle="bold"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="@dimen/dp_5"
    android:background="#88FFFFFF"
    >

<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    >
    <TextView
        android:text="@string/Capacity"
        android:layout_weight=".34"
        android:layout_width="0dp" 
        android:layout_height="wrap_content"
        style="@style/styleText_singleline_black_14"
        />
    <EditText
        android:id="@+id/edit_ClassMgtSub_Capacity"
        android:layout_weight=".66"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        style="@style/styleEditText"
        android:hint="@string/Capacity"
        />
    </LinearLayout>
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_5"
    >
    <TextView
        android:text="@string/Adviser_Name"
        android:layout_weight=".34"
        android:layout_width="0dp" 
        android:layout_height="wrap_content"
        style="@style/styleText_singleline_black_14"
        />
    <EditText
        android:id="@+id/edit_ClassMgtSub_Adviser_Name"
        android:layout_weight=".66"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        style="@style/styleEditText"
        android:hint="@string/Adviser_Name"
        />
    </LinearLayout>
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_5"
    >
    <TextView
        android:text="@string/Layout"
        android:layout_weight=".34"
        android:layout_width="0dp" 
        android:layout_height="wrap_content"
        style="@style/styleText_singleline_black_14"
        />
    <EditText
        android:id="@+id/edit_ClassMgtSub_row"
        android:layout_weight=".29"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        style="@style/styleEditText"
        android:hint="@string/Row"
        android:inputType="number"
        android:maxLength="2"
        />
    <TextView
        android:text="X"
        android:layout_weight=".08"
        android:layout_width="0dp" 
        android:layout_height="wrap_content"
        style="@style/styleText_singleline_black_14"
        android:gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/edit_ClassMgtSub_Column"
        android:layout_weight=".29"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        style="@style/styleEditText"
        android:hint="@string/Column"
        android:inputType="number"
        android:maxLength="2"
        />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
