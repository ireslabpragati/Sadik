<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
     <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_classroom_mgt_top"
    >
    
<ImageView 
    android:id="@+id/img_screen_logo"
    android:layout_width="@dimen/dp_30"
    android:layout_height="@dimen/dp_30"
    android:src="@drawable/class_icon"
    />
<View 
    android:id="@+id/view_underLine"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_1"
    android:layout_alignBottom="@+id/img_screen_logo"
    android:layout_toRightOf="@+id/img_screen_logo"
    android:background="#B4B4B4"
    android:layout_marginLeft="@dimen/dp_15"
    />
<TextView
    android:id="@+id/txtSettingClassSchoolId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/School_ID"
    android:layout_alignRight="@+id/view_underLine"
    android:layout_above="@+id/view_underLine"
	style="@style/styleText_singleline_black_14"
    />

</RelativeLayout>
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/layout_classroom_mgt_bottom"
    android:layout_below="@+id/layout_classroom_mgt_top"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="@dimen/dp_4"
    android:layout_margin="@dimen/dp_4"
    android:id="@+id/layout_classroom_mgt"
    >
   
</LinearLayout>
</ScrollView>
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:id="@+id/layout_classroom_mgt_bottom"
    android:padding="@dimen/dp_4"
    >
        <Button
        android:id="@+id/btn_classroom_mgt_Proceed"
        android:layout_width="wrap_content" 
        android:layout_height="@dimen/dp_25"
        android:background="@drawable/gradient_green"
	android:layout_gravity="right"
	android:text="@string/Done"
	android:textColor="@android:color/white"
	android:paddingLeft="@dimen/dp_5"
	android:paddingRight="@dimen/dp_5"
	android:layout_marginLeft="@dimen/dp_5"
        />
    
</LinearLayout>
</RelativeLayout>