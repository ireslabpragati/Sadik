<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_4"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/btn_ConfSchool_Forword"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="@dimen/dp_4"
    >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    
<ImageView 
    android:id="@+id/img_screen_logo"
    android:layout_width="@dimen/dp_30"
    android:layout_height="@dimen/dp_30"
    android:src="@drawable/school"
    />
<View 
    android:id="@+id/view_underLine"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_1"
    android:layout_alignBottom="@+id/img_screen_logo"
    android:layout_toRightOf="@+id/img_screen_logo"
    android:background="#B4B4B4"
    android:layout_marginLeft="@dimen/dp_15"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="@dimen/view_height"
    android:text="@string/Configure_School"
    android:layout_alignRight="@+id/view_underLine"
    android:layout_above="@+id/view_underLine"
	style="@style/styleText_singleline_black_14"
    />

</RelativeLayout>
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_5"
    >
    <TextView
        android:text="@string/School_ID"
        android:layout_weight=".36"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
	style="@style/styleText_singleline_black_14"
        />
    <EditText
        android:id="@+id/edit_ConfSchool_School_ID"
        android:layout_weight=".64"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        style="@style/styleEditText"
        android:hint="@string/School_ID"
        />
</LinearLayout>

<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_4"
    >
    <TextView
        android:text="@string/Address"
        android:layout_weight=".36"
        android:layout_width="0dp" 
        android:layout_height="fill_parent"
	style="@style/styleText_singleline_black_14"
        />
    <EditText
        android:id="@+id/edit_ConfSchool_Address"
        android:layout_weight=".64"
        android:layout_width="0dp" 
        android:layout_height="wrap_content"
        style="@style/styleEditTextNoPassword"
        android:gravity="top"
        android:lines="3"
        android:singleLine="false"
        android:hint="@string/Address"
        />
</LinearLayout>

<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_4"
    >
    <TextView
        android:layout_weight=".36"
        android:text="@string/Provience"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
	style="@style/styleText_singleline_black_14"
        />
    <Spinner
        android:id="@+id/spin_ConfSchool_Provience"
        android:prompt="@string/Provience"
        android:layout_weight=".64"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        android:entries="@array/provience_list"
                style="@style/styleSpinner"
        />
</LinearLayout>
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_4"
    >
    <TextView
        android:layout_weight=".36"
        android:text="@string/Regency_City"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
	style="@style/styleText_singleline_black_14"
        />
    <Spinner
        android:id="@+id/spin_ConfSchool_City"
        android:prompt="@string/Regency_City"
        android:layout_weight=".64"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        android:entries="@array/city_list"
                style="@style/styleSpinner"
        />
</LinearLayout>
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_4"
    >
    <TextView
        android:layout_weight=".36"
        android:text="@string/District"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
	style="@style/styleText_singleline_black_14"
        />
    <Spinner
        android:id="@+id/spin_ConfSchool_District"
        android:prompt="@string/District"
        android:layout_weight=".64"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        android:entries="@array/district_list"
                style="@style/styleSpinner"
        />
</LinearLayout>
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_4"
    >
    <TextView
        android:layout_weight=".36"
        android:text="@string/Sub_District_Village"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
	style="@style/styleText_singleline_black_14"
        />
    <Spinner
        android:id="@+id/spin_ConfSchool_SubDist"
        android:prompt="@string/Sub_District_Village"
        android:layout_weight=".64"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        android:entries="@array/subdist_list"
                style="@style/styleSpinner"
        />
</LinearLayout>
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_5"
    >
    <TextView
        android:text="@string/Zip_Code"
        android:layout_weight=".36"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
	style="@style/styleText_singleline_black_14"
        />
    <EditText
        android:id="@+id/edit_ConfSchool_Zipcode"
        android:layout_weight=".64"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        style="@style/styleEditText"
        android:maxLength="10"
        android:inputType="number"
        android:hint="@string/Zip_Code"
        />
</LinearLayout>
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_5"
    >
    <TextView
        android:layout_weight=".36"
        android:text="@string/Period_Count"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
	style="@style/styleText_singleline_black_14"
        />
    <Spinner
        android:id="@+id/spin_ConfSchool_Period_Count"
        android:prompt="@string/Period_Count"
        android:layout_weight=".64"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        android:entries="@array/number_list"
                style="@style/styleSpinner"
	android:spinnerMode="dropdown"
        />
</LinearLayout>

<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_4"
    >
    
    <TextView
        android:text="@string/Effective_Days"
        android:layout_weight=".36"
        android:layout_width="0dp" 
        android:layout_height="fill_parent"
	style="@style/styleText_singleline_black_14"
        />
    <TextView
        android:id="@+id/txt_ConfSchool_Effective_Days"
        android:layout_weight=".64"
        android:layout_width="0dp" 
        android:layout_height="wrap_content"
        style="@style/styleEditTextNoPassword"
        android:gravity="top"
        android:lines="3"
        android:singleLine="false"
        android:inputType="none"
        android:hint="@string/Effective_Days"
        />
    
</LinearLayout>

 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    >
    
<ImageView 
    android:id="@+id/img_screen_logo1"
    android:layout_width="@dimen/dp_30"
    android:layout_height="@dimen/dp_30"
    android:src="@drawable/class_icon"
    />
<View 
    android:id="@+id/view_underLine1"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_1"
    android:layout_alignBottom="@+id/img_screen_logo1"
    android:layout_toRightOf="@+id/img_screen_logo1"
    android:background="#B4B4B4"
    android:layout_marginLeft="@dimen/dp_15"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="@dimen/view_height"
    android:text="@string/Configure_Class"
    android:layout_alignRight="@+id/view_underLine1"
    android:layout_above="@+id/view_underLine1"
	style="@style/styleText_singleline_black_14"
    />

</RelativeLayout>
<LinearLayout
    android:id="@+id/layout_configure_class"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >
<LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_5"
    >
   <Spinner
        android:id="@+id/spin_ConfSchool_Standard"
        android:layout_weight=".35"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        android:entries="@array/class_standard"
        android:prompt="@string/Standard"
                style="@style/styleSpinner"
	android:spinnerMode="dropdown"
                android:layout_marginRight="@dimen/dp_4"
        />
    <Spinner
        android:id="@+id/spin_ConfSchool_Section"
        android:layout_weight=".42"
        android:layout_width="0dp" 
        android:layout_height="@dimen/view_height"
        android:prompt="@string/Section"
        android:entries="@array/section_list"
	android:spinnerMode="dropdown"
                style="@style/styleSpinner"
                android:layout_marginRight="@dimen/dp_4"
        />
    <Button
        android:id="@+id/btn_ConfSchool_More"
        android:textColor="@android:color/white"
        android:layout_weight=".23"
        android:layout_width="0dp" 
        android:layout_height="wrap_content"
        android:text="@string/More"
        android:background="@drawable/round_green_bg"
	android:paddingTop="@dimen/dp_4"
	android:paddingBottom="@dimen/dp_4"
	android:textSize="@dimen/sp_13"
                
        />
    </LinearLayout>

</LinearLayout>
</LinearLayout>
</ScrollView>
    <Button
        android:id="@+id/btn_ConfSchool_Forword"
        android:layout_width="@dimen/dp_38" 
        android:layout_height="@dimen/dp_25"
        android:background="@drawable/forward"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>